@model List<HospitalSystem.Web.Models.DoctorPerformanceVM>

@{
    ViewData["Title"] = "Doctor Performance Dashboard";
}
<a href="/Doctor/Create" style="margin-bottom:15px; display:inline-block;">
    ➕ Add Doctor
</a>

<h2 style="margin-bottom:20px;">🩺 Doctor Performance Dashboard</h2>

<div class="dashboard-card">
    <table style="width:100%; border-collapse:collapse;">
        <thead>
            <tr style="background:#f1f5f9;">
                <th style="padding:12px;">Name</th>
                <th style="padding:12px;">Specialty</th>
                <th style="padding:12px;">Total</th>
                <th style="padding:12px;">Confirmed</th>
                <th style="padding:12px;">Rejected</th>
                <th style="padding:12px;">Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var d in Model)
            {
                <tr style="text-align:center; border-bottom:1px solid #eee;">
                    <td style="padding:10px;">@d.DoctorName</td>
                    <td style="padding:10px;">@d.Specialty</td>
                    <td style="padding:10px;">@d.TotalAppointments</td>

                    <td style="padding:10px;">
                        <span class="badge badge-success">
                            @d.ConfirmedAppointments
                        </span>
                    </td>

                    <td style="padding:10px;">
                        <span class="badge badge-danger">
                            @d.RejectedAppointments
                        </span>
                    </td>

                    <td style="padding:10px;">
                        @if (d.IsAvailable)
                        {
                            <span class="badge badge-info">Available</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Busy</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
